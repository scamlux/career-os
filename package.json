{
  "name": "careeros-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:services",
    "build:shared": "tsc -p packages/shared/tsconfig.json",
    "build:services": "npm run build:api-gateway && npm run build:auth && npm run build:user-profile && npm run build:ai-core && npm run build:roadmap && npm run build:lms && npm run build:edu-tracker && npm run build:billing && npm run build:analytics",
    "build:api-gateway": "tsc -p services/api-gateway/tsconfig.json",
    "build:auth": "tsc -p services/auth-service/tsconfig.json",
    "build:user-profile": "tsc -p services/user-profile-service/tsconfig.json",
    "build:ai-core": "tsc -p services/ai-core-service/tsconfig.json",
    "build:roadmap": "tsc -p services/roadmap-service/tsconfig.json",
    "build:lms": "tsc -p services/lms-service/tsconfig.json",
    "build:edu-tracker": "tsc -p services/edu-tracker-service/tsconfig.json",
    "build:billing": "tsc -p services/subscription-billing-service/tsconfig.json",
    "build:analytics": "tsc -p services/analytics-service/tsconfig.json",
    "infra:up": "docker compose -f infra/docker/docker-compose.local.yml up -d",
    "infra:down": "docker compose -f infra/docker/docker-compose.local.yml down",
    "migrate:local": "node scripts/apply-migrations.mjs",
    "dev:api-gateway": "tsx watch services/api-gateway/src/main.ts",
    "dev:auth": "tsx watch services/auth-service/src/main.ts",
    "dev:user-profile": "tsx watch services/user-profile-service/src/main.ts",
    "dev:ai-core": "tsx watch services/ai-core-service/src/main.ts",
    "dev:roadmap": "tsx watch services/roadmap-service/src/main.ts",
    "dev:lms": "tsx watch services/lms-service/src/main.ts",
    "dev:edu-tracker": "tsx watch services/edu-tracker-service/src/main.ts",
    "dev:billing": "tsx watch services/subscription-billing-service/src/main.ts",
    "dev:analytics": "tsx watch services/analytics-service/src/main.ts",
    "typecheck": "npm run build"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.0",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.15",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/throttler": "^6.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "kafkajs": "^2.2.4",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.10.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
